<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyectocm.guiame.GpsRuta">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview_ruta"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true" >

    </com.google.android.gms.maps.MapView>

    <TextView
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:id="@+id/lugar"
        android:textSize="20dp"
        android:layout_gravity="right|top"
        android:textColor="#060606"
        android:layout_alignTop="@+id/mapview_ruta" />

    <RelativeLayout
        android:layout_width="211dp"
        android:layout_height="58dp"
        android:layout_gravity="right|bottom"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:id="@+id/destino_ruta"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/cancelar_gps_ruta"
            android:layout_alignTop="@+id/destino_ruta"
            android:layout_toLeftOf="@+id/destino_ruta"
            android:layout_toStartOf="@+id/destino_ruta" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UdeA"
        android:id="@+id/udea_ruta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
